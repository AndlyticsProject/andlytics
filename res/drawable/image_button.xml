<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- pressed -->
	<item
		android:state_pressed="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			
			<gradient
				android:startColor="@color/blackText"
				android:centerColor="#484848"
				android:endColor="#484848"
				android:angle="270" />			
			<stroke
				android:width="2dp"
				android:color="@color/lightBlue" />
			<corners
				android:radius="2dp" />
		</shape>
	</item>

	<!-- focused -->
	<item
		android:state_focused="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="@color/blackText"
				android:centerColor="#484848"
				android:endColor="#484848"
				android:angle="270" />
			<stroke
				android:width="2dp"
				android:color="@color/lightBlue" />
			<corners
				android:radius="2dp" />
		</shape>
	</item>

	<!-- disabled -->
	<item
		android:state_enabled="false">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<gradient
				android:startColor="@color/blackText"
				android:centerColor="#909090"
				android:endColor="#909090"
				android:angle="270" />
			<stroke
				android:width="2dp"
				android:color="#484848" />
			<corners
				android:radius="2dp" />
		</shape>
	</item>

	<!-- default -->
	<item>
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">

			<gradient
				android:startColor="@color/blackText"
				android:endColor="#484848"
				android:angle="270" />
			<stroke
				android:width="2dp"
				android:color="#484848" />
			<corners
				android:radius="2dp" />
		</shape>
	</item>

</selector>